<div class="row row-card-no-pd">
	<!-- Bakiye Kartı -->
	<div class="col-md-4">
		<div class="card">
			<div class="card-body">
				<p class="fw-bold mt-1">Toplam Kazanç</p>
				<h4><b>₺ 1.000</b></h4>
				<a href="#" class="btn btn-primary btn-full text-left mt-3 mb-3"><i class="la la-plus"></i> Yeni Ödeme Ekle</a>
			</div>
			<div class="card-footer">
				<ul class="nav">
					<li class="nav-item"><a class="btn btn-default btn-link" href="#"><i class="la la-history"></i> Geçmiş</a></li>
					<li class="nav-item ml-auto"><a class="btn btn-default btn-link" href="#"><i class="la la-refresh"></i> Yenile</a></li>
				</ul>
			</div>
		</div>
	</div>

	<!-- İstatistik Kartları -->
	<div class="col-md-5">
		<div class="card">
			<div class="card-body">
				<div class="progress-card">
					<div class="d-flex justify-content-between mb-1">
						<span class="text-muted">Yetenek Sayısı</span>
						<span class="text-muted fw-bold">@ViewBag.v1</span>
					</div>
					<div class="progress mb-2" style="height: 7px;">
						<div class="progress-bar bg-success" role="progressbar" style="width: 60%" title="60%"></div>
					</div>
				</div>

				<div class="progress-card">
					<div class="d-flex justify-content-between mb-1">
						<span class="text-muted">İş Tecrübesi</span>
						<span class="text-muted fw-bold">@ViewBag.v6</span>
					</div>
					<div class="progress mb-2" style="height: 7px;">
						<div class="progress-bar bg-info" role="progressbar" style="width: 35%" title="35%"></div>
					</div>
				</div>

				<div class="progress-card">
					<div class="d-flex justify-content-between mb-1">
						<span class="text-muted">Tamamlanan Görevler</span>
						<span class="text-muted fw-bold">@ViewBag.v8</span>
					</div>
					<div class="progress mb-2" style="height: 7px;">
						<div class="progress-bar bg-primary" role="progressbar" style="width: 80%" title="80%"></div>
					</div>
				</div>

				<div class="progress-card">
					<div class="d-flex justify-content-between mb-1">
						<span class="text-muted">İletişim Yanıt Oranı</span>
						<span class="text-muted fw-bold">@ViewBag.v4</span>
					</div>
					<div class="progress mb-2" style="height: 7px;">
						<div class="progress-bar bg-warning" role="progressbar" style="width: 33%" title="33%"></div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Ek İstatistik Kartı -->
	<div class="col-md-3">
		<div class="card card-stats">
			<div class="card-body">
				<p class="fw-bold mt-1">Genel Durum</p>
				<div class="row">
					<div class="col-5">
						<div class="icon-big text-center icon-warning">
							<i class="la la-pie-chart text-warning"></i>
						</div>
					</div>
					<div class="col-7 d-flex align-items-center">
						<div class="numbers">
							<p class="card-category">Depolama</p>
							<h4 class="card-title">15GB</h4>
						</div>
					</div>
				</div>
				<hr />
				<div class="row">
					<div class="col-5">
						<div class="icon-big text-center">
							<i class="la la-heart-o text-primary"></i>
						</div>
					</div>
					<div class="col-7 d-flex align-items-center">
						<div class="numbers">
							<p class="card-category">Takipçi Sayısı</p>
							<h4 class="card-title">+1K</h4>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>