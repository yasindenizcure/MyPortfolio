@model List<MyPortfolio.DAL.Entities.Feature>
<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/a0hxzxy.jpg" data-natural-width=1500 data-natural-height=2000 data-position-y=center>
    <div class="overlay"></div>
    <div class="shadow-overlay"></div>
    @foreach (var item in Model)
    {
        <div class="home-content">
            <div class="row home-content__main">
                <h3>Selamlar!</h3>
                <h1>
                    @item.Title <br>
                    @item.Description
                </h1>
                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Projelerim
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        Hakkımda
                    </a>
                </div>
                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Aşağı Kaydır!</span>
                    </a>
                </div>
            </div>
        </div>
    }
    @await Component.InvokeAsync("_SocialMediaComponentPartial")


</section> 
