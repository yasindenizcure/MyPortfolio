@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
<div class="container-fluid">
	<h4 class="page-title">Referanslar</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Referans Güncelleme Sayfası</div>
				</div>
				<div class="card-body">

					<form method="post">
						<input type="hidden" asp-for="TestimonialId" />
						<label>İsim Soyisim</label>
						<input type="text" asp-for="NameSurname" class="form-control" />
						<br />
						<label>Başlık</label>
						<input type="text" asp-for="Title" class="form-control" />
						<br />
						<label>Açıklama</label>
						<textarea rows="4" class="form-control" asp-for="Description"></textarea>
						<br />
						<label>Resim URL</label>
						<input type="text" asp-for="ImageUrl" class="form-control" />
						<br />
						<button class="btn btn-warning">Referansı Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
</div>

