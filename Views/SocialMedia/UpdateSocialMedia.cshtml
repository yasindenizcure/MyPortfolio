@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="SocialMediaId" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>URL</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<label>İkon</label>
							<textarea rows="4" class="form-control" asp-for="Icon"></textarea>
							<br />
							<button class="btn btn-warning">Sosyal Medyayı Güncelle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>